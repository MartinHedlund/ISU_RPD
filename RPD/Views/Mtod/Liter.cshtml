@using RPD.ViewModel;
@model MtodViewModel

<h2 class="m-2">Литература</h2>
@*<h4 class="alert-danger">В процессе обновления</h4>*@

<div class="container">
    <button class=" btn btn-primary w-auto m-2" onclick="LiterChois()">
        Выбранная литература
    </button>
    <br>

    @Html.Partial("_GridPartialLiter", Model.RpLits)
<!-- Button trigger modal -->
</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Выбранная литература</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body LiterChois">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>
<script src="~/js/Liter.js" asp-append-version="true"></script>
